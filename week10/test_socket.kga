var fd

label main
    write "socket.txt" to REG_A
    write SYS_CALL_OPEN to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error
    copy REG_RES to var:fd
    
    write SYS_CALL_READ_INPUT to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec

    write "GET" to REG_A
    copy REG_RES to REG_B
    write " " to REG_C
    write OP_CONCAT_WITH to REG_OP
    cpu_exec

    copy var:fd to REG_A
    write "1" to REG_B
    copy REG_RES to REG_C
    write SYS_CALL_WRITE to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error
    
    write "handler" to REG_A
    write 50 to REG_B
    write SYS_CALL_SCHED_PROGRAM to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error

    write SYS_CALL_WAIT_SCHED to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error

    copy var:fd to REG_A
    write "1" to REG_B 
    write SYS_CALL_READ to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error

    copy REG_RES to REG_A
    write "OK" to REG_B
    write OP_CMP_EQ to REG_OP
    cpu_exec
    jump_if_not label:error

    copy var:fd to REG_A
    write "2" to REG_B
    write SYS_CALL_READ to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error
    copy REG_RES to 190

    write "3" to REG_B
    cpu_exec
    jump_err label:error
    copy REG_RES to 191

    write "4" to REG_B
    cpu_exec
    jump_err label:error
    copy REG_RES to 192

    write "5" to REG_B
    cpu_exec
    jump_err label:error
    copy REG_RES to 193

    write "6" to REG_B
    cpu_exec
    jump_err label:error
    copy REG_RES to 194

    write "7" to REG_B
    cpu_exec
    jump_err label:error
    copy REG_RES to 195

    write "8" to REG_B
    cpu_exec
    jump_err label:error
    copy REG_RES to 196

    write "190" to REG_A
    write "197" to REG_B
    write SYS_CALL_RENDER_BITMAP to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error

    copy var:fd to REG_A
    write SYS_CALL_CLOSE to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
    jump_err label:error

label exit
    write 0 to REG_A
    write SYS_CALL_EXIT to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec
label error
    write "Error occured" to REG_A
    write COLOR_RED to REG_B
    write SYS_CALL_PRINTLN to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec

    write 1 to REG_A
    write SYS_CALL_EXIT to REG_D
    write OP_SYS_CALL to REG_OP
    cpu_exec    